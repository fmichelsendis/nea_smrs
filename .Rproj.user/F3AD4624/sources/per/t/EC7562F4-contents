dfa<-fread("csv/SMRs_ARIS_a.csv", header = TRUE)
dfb<-fread("csv/SMRs_ARIS_b.csv", header = TRUE)
dfc<-fread("csv/SMRs_ARIS_c.csv", header = TRUE)

df<-merge(dfa, dfb)%>%
  merge(dfc, by = c('ID', 'COOLANT'))%>%
  select(-"Power plant output,net\n[MWe]", -"Plant efficiency, net\n[%]",
         -"Thermodynamic cycle",-"Non-electrical applications",
         -"Primary coolant flow rate\n[kg/s]",-"Delta temperature\n[Â°C]")




